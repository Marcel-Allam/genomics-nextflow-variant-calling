// nextflow.config
//
// Minimal config for the genomics-nextflow-variant-calling pipeline.
// Defines parameters and the conda environment used by all processes.

params {

    // Pattern for paired-end FASTQ files:
    // Expected filenames:
    //   data/fastq/tumor_R1.fastq.gz
    //   data/fastq/tumor_R2.fastq.gz
    reads     = "data/fastq/*_{R1,R2}.fastq.gz"

    // Reference genome FASTA:
    //   e.g. data/reference/genome.fa
    reference = "$baseDir/data/reference/genome.fa"

    // Output directory for all results.
    outdir    = "results"

    // Default number of threads to use in tools that support it.
    // This is passed directly into main.nf as ${params.cpus}.
    cpus      = 4

    // Conda environment definition file for all processes.
    // Should include: bwa-mem2, samtools, bcftools, fastqc, vep, fastp, etc.
    conda_env = "envs/genomics_env.yml"

    // Optional read trimming with fastp:
    //   trim_reads = false  -> no trimming (default)
    //   trim_reads = true   -> enable fastp trimming
    //
    // trim_qual controls the Phred quality threshold:
    //   20 = standard (Q20 ~ 1% error rate)
    //   30 = stricter (Q30 ~ 0.1% error rate)
    trim_reads = false
    trim_qual  = 20
}

// Use the same conda environment for all processes.
process.conda = { params.conda_env }
